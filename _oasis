OASISFormat: 0.4
Name:        ocaml-tls
Version:     0.0.1
Synopsis:    TLS support for ocaml
Authors:     Hannes Mehnert <hannes@mehnert.org>, David Kaloper <david@numm.org>
Maintainers: David Kaloper <david@numm.org>, Hannes Mehnert <hannes@mehnert.org>
Homepage:    https://github.com/mirleft/ocaml-tls
License:     FreeBSD
Plugins:     META (0.4)
Description:
  TLS support on top of OCaml
BuildTools:  ocamlbuild


Flag "lwt"
  Description     : Lwt_unix backend
  Default         : true

Library "tls"
  Path            : lib/
  Modules         : Ciphersuite, Utils, Packet, Core, Certificate,
                    Printer, Reader, Writer, Crypto,
                    Flow, Server, Client, X509
  InternalModules : Registry, Asn_grammars, Control
  Pack            : true
  BuildDepends    : cstruct, cstruct.syntax, nocrypto, asn1-combinators

Library "tests"
  Path            : tests/
  Modules         : Testlib, Readertests, Writertests, Readerwritertests, Unittests
  Install         : false
  Build          $: flag(tests)
  BuildDepends    : tls, oUnit

Library "tls-lwt"
  Build          $: flag(lwt)
  FindlibName     : lwt
  FindlibParent   : tls
  Path            : lwt
  Modules         : Tls_lwt, X509_lwt
  BuildDepends    : tls, lwt, lwt.syntax, lwt.unix

Executable "feedback"
  Build          $: flag(tests)
  Path            : tests/
  Install         : false
  CompiledObject  : native
  MainIs          : feedback.ml
  BuildDepends    : tests, cstruct.unix

Executable "test_runner"
  Build          $: flag(tests)
  Path            : tests/
  Install         : false
  CompiledObject  : native
  MainIs          : unittestrunner.ml
  BuildDepends    : tls, tests

Test it
  Command         : $test_runner
  Run            $: flag(tests)

Executable "echo_server"
  Build          $: flag(lwt)
  Path            : lwt/examples/
  Install         : false
  CompiledObject  : native
  MainIs          : echo_server.ml
  BuildDepends    : tls.lwt

Executable "http_server"
  Build          $: flag(lwt)
  Path            : lwt/examples/
  Install         : false
  CompiledObject  : native
  MainIs          : http_server.ml
  BuildDepends    : tls.lwt

Executable "echo_client"
  Build          $: flag(lwt)
  Path            : lwt/examples/
  Install         : false
  CompiledObject  : native
  MainIs          : echo_client.ml
  BuildDepends    : tls.lwt

Executable "http_client"
  Build          $: flag(lwt)
  Path            : lwt/examples/
  Install         : false
  CompiledObject  : native
  MainIs          : http_client.ml
  BuildDepends    : tls.lwt
